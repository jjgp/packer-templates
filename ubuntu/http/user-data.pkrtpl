#cloud-config
autoinstall:
  # Reference: https://ubuntu.com/server/docs/install/autoinstall-reference
  early-commands:
    # Reference: https://github.com/rasa/bento/blob/ec324adf7ea08bcbece8367acdd8acc25e428b9a/packer_templates/ubuntu/http/user-data#L10
    - systemctl stop ssh
  identity:
    hostname: ${hostname}
    password: ${password_crypted}
    username: ${username}
  keyboard:
    layout: en
    variant: us
  locale: en_US.UTF-8
  ssh:
    allow-pw: true
    authorized_keys:
      # Reference: https://github.com/hashicorp/vagrant/blob/master/keys/vagrant.pub
      - "ssh-rsa  vagrant insecure public key"
    install-server: true
  version: 1
